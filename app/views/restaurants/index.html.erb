<div class="container">

  <h1>This is the list of our restaurants:</h1>
  <% @restaurants.each do |restaurant| %>
    <h3> <%=  link_to restaurant.name, restaurant%> </h3>
      <ul>
        <li><%= restaurant.address %></li>
        <li><%= restaurant.phone_number %></li>
        <li><%= restaurant.category %></li>
      </ul>
  <%end%>

  <%=  link_to "Add a new restaurant" , new_restaurant_path%>
</div>


