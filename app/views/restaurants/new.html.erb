
<div class="container">

  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, placeholder: 'Please, choose between chinese, italian, japanese, french or belgian' %>
    <%= f.submit "Add new restaurant" %>
  <% end %>

</div>


